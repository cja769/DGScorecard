<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dgs.dgscorecard" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScorecardActivity"
            android:label="@string/title_activity_scorecard" >
        </activity>
        <activity
            android:name=".PlayerSelect"
            android:label="@string/title_activity_player_select"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".CourseSelect"
            android:label="@string/title_activity_course_select" >
        </activity>
        <activity
            android:name=".ManualCourseAdd"
            android:label="@string/title_activity_manual_course_add"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>
